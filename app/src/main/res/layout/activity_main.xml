<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/activity_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.sergeivasilenko.smoothgradient.demo.ui.MainActivity">

	<android.support.v7.widget.RecyclerView
			android:id="@+id/recyclerView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Different ways to draw smooth gradient"/>

	<!--<pro.inline.smoothgradient.demo.CanvasPointSmoothGradientView
			android:layout_width="match_parent"
			android:layout_height="100dp"/>-->

	<com.sergeivasilenko.smoothgradient.demo.view.CanvasLineSmoothGradientView
			android:layout_width="match_parent"
			android:layout_height="100dp"/>

	<com.sergeivasilenko.smoothgradient.demo.view.CanvasPictureSmoothGradientView
			android:layout_width="match_parent"
			android:layout_height="100dp"/>

	<com.sergeivasilenko.smoothgradient.demo.view.BitmapGradientView
			android:layout_width="match_parent"
			android:layout_height="100dp"/>

	<Button
			android:id="@+id/invalidateButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Invalidate"/>

</LinearLayout>
